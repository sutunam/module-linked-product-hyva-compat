{
    "name": "sutunam/hyva-linked-product",
    "description": "Hyva Compat For Sutunam Linked Product Module",
    "type": "magento2-module",
    "version": "1.0.3",
    "require": {
        "magento/framework":"^100|^101|^102|^103",
        "sutunam/module-base": "^1.0",
        "sutunam/module-linked-product": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3",
        "phpunit/phpunit": "^9",
        "bitexpert/phpstan-magento": "^0.32.0",
        "phpstan/phpstan": "^1.12",
        "phpstan/extension-installer": "^1.4.3",
        "magento/magento-coding-standard": "^31.0",
        "magento/module-backend": "^102.0"
    },
    "license": "GPL-3.0-or-later",
    "autoload": {
        "files": [
            "src/registration.php"
        ],
        "psr-4": {
            "Sutunam\\HyvaLinkedProduct\\": "src"
        }
    },
    "repositories": {
        "magento": {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=-1",
        "phpcs": "vendor/bin/phpcs --ignore=vendor,*.xml,*.less,*.js --standard=Magento2 ./",
        "post-install-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths vendor/magento/magento-coding-standard/,vendor/phpcompatibility/php-compatibility)"
        ],
        "post-update-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths vendor/magento/magento-coding-standard/,vendor/phpcompatibility/php-compatibility)"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "magento/composer-dependency-version-audit-plugin": false
        }
    }
}
